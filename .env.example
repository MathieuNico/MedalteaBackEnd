# Environment Variables Template for Medaltea Backend
# Copy this file to .env and fill in your actual values

# ============================================
# API KEYS (REQUIRED)
# ============================================

# Groq API Key for LLM chat model
# Get it from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key for embeddings
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL credentials
POSTGRES_USER=medaltea
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=medaltea_db

# PostgreSQL connection string for pgvector
# Format: postgresql+psycopg://user:password@host:port/database
CONNECTION_STRING_PGVECTOR=postgresql+psycopg://medaltea:your_secure_password_here@db:5432/medaltea_db

# ============================================
# MODEL CONFIGURATION
# ============================================

# Chat model to use (Groq models)
# Options: llama-3.3-70b-versatile, mixtral-8x7b-32768, gemma2-9b-it
CHAT_MODEL=openai/gpt-oss-120b

# Embedding model (OpenAI)
# Options: text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL=text-embedding-3-large

# Vector database collection name
COLLECTION_NAME=my_docs

# ============================================
# SERVICE URLS
# ============================================

# Vector DB API URL (internal Docker network)
VECTOR_DB_API_URL=http://vector_db_api:8001

# ============================================
# PRODUCTION SETTINGS (Optional)
# ============================================

# Uncomment for production
# ENVIRONMENT=production
# LOG_LEVEL=INFO
